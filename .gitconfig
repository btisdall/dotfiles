[include]
  path = ~/.git-local
[push]
  default = matching
[color]
  branch = auto
  status = auto
  diff = auto
[alias]
  co = checkout
  br = branch
  ci = commit
  st = status
  di = diff
  us = reset HEAD
  lst = log -1 --abbrev-commit

[color "status"]
  added    = yellow
  changed  = green
  untracked = red
[core]
	excludesfile = /Users/tisdalbe/.gitignore_global
  pager = less -XF
	autocrlf = input
[pull]
  rebase = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[user]
	name = Ben Tisdall
	email = ben@tisdall.org.uk
[commit]
	template = /Users/tisdalbe/.stCommitMsg
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
